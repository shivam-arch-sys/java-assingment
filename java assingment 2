1-
import java.util.Scanner;


public class HillPatternWeight {
    public static int hillPatternWeight(int totalLevels, int headWeight, int increment) {
        int totalWeight = 0;
        int currentWeight = headWeight;
        for (int i = 1; i <= totalLevels; i++) {
            totalWeight += i * currentWeight;
            currentWeight += increment;
        }
        return totalWeight;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        
        int totalLevels = sc.nextInt();

        
        int headWeight = sc.nextInt();

        
        int increment = sc.nextInt();

        int result = hillPatternWeight(totalLevels, headWeight, increment);
        System.out.println("Total weight of Hill Pattern: " + result);
    }
}

2-
public class SecondWordUppercase {
    public static String getSecondWordUppercase(String sentence) {
        String[] words = sentence.trim().split("\\s+");
        if (words.length < 2) {
            return "LESS";
        }
        return words[1].toUpperCase();
    }

    public static void main(String[] args) {
        String input1 = "Wipro Technologies Bangalore";
        System.out.println(getSecondWordUppercase(input1));   

        String input2 = "Hello World";
        System.out.println(getSecondWordUppercase(input2));   

        String input3 = "Hello";
        System.out.println(getSecondWordUppercase(input3));   
    }
}

3-
public class PalindromeCheck {
    public static boolean isPalindrome(String str) {
        str = str.replaceAll("\\s+", "").toLowerCase(); // Optional: ignore spaces and case
        int left = 0;
        int right = str.length() - 1;
        while (left < right) {
            if (str.charAt(left) != str.charAt(right)) {
                return false;
            }
            left++;
            right--;
        }
        return true;
    }

    public static void main(String[] args) {
        String str1 = "madam";
        String str2 = "hello";
        System.out.println(str1 + ": " + isPalindrome(str1)); 
        System.out.println(str2 + ": " + isPalindrome(str2)); 
    }
}

4-
public class StringWeight {
    public static int getStringWeight(String input) {
        int weight = 0;
        for (int i = 0; i < input.length(); i++) {
            char ch = Character.toLowerCase(input.charAt(i));
            if (ch >= 'a' && ch <= 'z') {
                weight += (ch - 'a' + 1);
            }
        }
        return weight;
    }

    public static void main(String[] args) {
        String test = "Hello World!";
        System.out.println("Weight of the string: " + getStringWeight(test)); 
    }
}

5-
public class MostFrequentDigit {
    public static int mostFrequentDigit(int num) {
        num = Math.abs(num); // Handle negative numbers
        int[] count = new int[10];

        while (num > 0) {
            int digit = num % 10;
            count[digit]++;
            num /= 10;
        }

        int maxCount = 0;
        int bestDigit = 0;
        for (int i = 0; i < 10; i++) {
            if (count[i] > maxCount) {
                maxCount = count[i];
                bestDigit = i;
            }
        }
        return bestDigit;
    }

    public static void main(String[] args) {
        int test = 1223355;
        System.out.println("Most frequent digit: " + mostFrequentDigit(test));  

        int test2 = 1223377;
        System.out.println("Most frequent digit: " + mostFrequentDigit(test2)); 
    }
}

6-
public class StringASCIIConcatenation {
    public static String generateAsciiCode(String input) {
        StringBuilder result = new StringBuilder();
        for (char c : input.toCharArray()) {
            result.append((int)c);
        }
        return result.toString();
    }

    public static void main(String[] args) {
        String test = "Abc";
        System.out.println("ASCII Code: " + generateAsciiCode(test)); 
    }
}

7-
public class StringCodeGenerator {
    
    public static String generateCode(String input) {
        
        String noVowels = input.replaceAll("[aeiouAEIOU]", "");
        
        
        String upper = noVowels.toUpperCase();
        
       
        String reversed = new StringBuilder(upper).reverse().toString();
        
        
        StringBuilder code = new StringBuilder();
        for (char c : reversed.toCharArray()) {
            code.append((int) c);
        }
        
        return code.toString();
    }

    public static void main(String[] args) {
        String input = "HelloWorld";
        String code = generateCode(input);
        System.out.println("Generated code: " + code);
        
    }
}

8-
public class LargeNumberAddition {
    public static String addStrings(String num1, String num2) {
        StringBuilder sb = new StringBuilder();

        int i = num1.length() - 1; 
        int j = num2.length() - 1;
        int carry = 0;

        while (i >= 0 || j >= 0 || carry != 0) {
            int digit1 = i >= 0 ? num1.charAt(i) - '0' : 0;
            int digit2 = j >= 0 ? num2.charAt(j) - '0' : 0;

            int sum = digit1 + digit2 + carry;
            sb.append(sum % 10);
            carry = sum / 10;

            i--;
            j--;
        }

        return sb.reverse().toString();
    }

    public static void main(String[] args) {
        String num1 = "987654321987654321987654321";
        String num2 = "123456789123456789123456789";

        System.out.println("Sum: " + addStrings(num1, num2));
    }
}

